import java.util.ArrayList;
import java.util.Arrays;
import java.util.Collections;
import java.util.List;

public class KthSmallestSort {

    public static Integer findKthSmallest(ArrayList<Integer> list, int k) {
       
        if (list == null || list.isEmpty() || k > list.size() || k <= 0) {
            return null; // Or throw an IllegalArgumentException
        }

       
        ArrayList<Integer> copyList = new ArrayList<>(list);

        
        Collections.sort(copyList);

       
        return copyList.get(k - 1);
    }

    public static void main(String[] args) {
        ArrayList<Integer> numbers = new ArrayList<>(Arrays.asList(7, 10, 4, 3, 20, 15));
        int k = 3;

        Integer result = findKthSmallest(numbers, k);
        
        System.out.println("Input List: " + numbers);
        System.out.println("The " + k + "rd smallest element is: " + result); 
        
    }
}
